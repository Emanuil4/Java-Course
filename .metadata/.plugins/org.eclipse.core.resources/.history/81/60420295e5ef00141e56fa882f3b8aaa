package homeworkLection3;
import java.util.Scanner;
public class cards {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in,"UTF-8");
		System.out.print("Please enter a card:");
		char a= input.next().charAt(0);
		switch(a){
		case 2:
			System.out.println("Card is 2");
			break;
		case 3:
			System.out.println("Card is 3");
			break;
		case 4:
			System.out.println("Card is 4");
			break;
		case 5:
			System.out.println("Card is 5");
			break;
		case 6:
			System.out.println("Card is 6");
			break;
		case 7:
			System.out.println("Card is 7");
			break;
		case 8:
				System.out.println("Card is 8");
				break;
		case 9:
			System.out.println("Card is 9");
			break;
		case 10:
			System.out.println("Card is 10");
			break;
		case 11:
			System.out.println("Card is J");
			break;
		case 12:
			System.out.println("Card is  Q ");
			break;
		case 13:
			System.out.println("Card is K ");
			break;
		case 14:
			System.out.println("Card is A");
			break;
		default:
		   System.out.println("Invalid card!");
		}
	}

}
